<odoo>
    <!-- Tree view for Bids -->
    <record id="view_purchase_rfq_bid_tree" model="ir.ui.view">
        <field name="name">purchase.rfq.bid.tree</field>
        <field name="model">purchase.rfq.bid</field>
        <field name="arch" type="xml">
            <tree string="Supplier Bids">
                <field name="rfq_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Bids -->
    <record id="view_purchase_rfq_bid_form" model="ir.ui.view">
        <field name="name">purchase.rfq.bid.form</field>
        <field name="model">purchase.rfq.bid</field>
        <field name="arch" type="xml">
            <form string="Supplier Bid">
                <sheet>
                    <group>
                        <field name="rfq_id"/>
                        <field name="partner_id"/>
                        <field name="price"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Bids -->
    <record id="action_purchase_bids" model="ir.actions.act_window">
        <field name="name">Bids</field>
        <field name="res_model">purchase.rfq.bid</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item for Bids under Orders submenu -->
    <menuitem id="menu_purchase_bids"
              name="Bids"
              parent="purchase.menu_procurement_management"
              sequence="25"
              action="action_purchase_bids"/>
</odoo>
