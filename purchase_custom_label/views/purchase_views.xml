<odoo>
    <odoo>
    <!-- Tree view -->
    <record id="view_purchase_bid_tree" model="ir.ui.view">
        <field name="name">purchase.bid.tree</field>
        <field name="model">purchase.bid</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rfq_id"/>
                <field name="partner_id"/>
                <field name="price"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_purchase_bid_form" model="ir.ui.view">
        <field name="name">purchase.bid.form</field>
        <field name="model">purchase.bid</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="rfq_id"/>
                        <field name="partner_id"/>
                        <field name="price"/>
                        <field name="date_deadline"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_order_form_inherit_vendor_label" model="ir.ui.view">
        <field name="name">purchase.order.form.vendor.label</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Hide partner_id from the UI but keep it in the model -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <!-- Add vendor_ids after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vendor_ids" widget="many2many_tags" required="1"/>
            </xpath>

        </field>
    </record>
</odoo>
